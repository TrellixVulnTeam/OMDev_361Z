SRCPATH=$(OMDEV)\lib\antlr-win32-msvc
INCLPATH=$(OMDEV)\include
CPPFLAGS=/c /Od /I $(INCLPATH) /D "WIN32" /D "_DEBUG" /D "_LIB" /D "_MBCS" /Gm /EHsc /RTC1 /MTd /Fd"antlrd.pdb" /W3 /nologo /ZI /TP
SRCS=$(SRCPATH)\*.cpp
OBJS=*.obj 


all: antlrd.lib

antlrd.lib: $(OBJS)
	@move /Y dll.obj dll.ob_
	lib.exe /OUT:"antlrd.lib" /NOLOGO *.obj
	@move /Y dll.ob_ dll.obj

$(OBJS):$(SRCS)
	$(CC) $(CPPFLAGS) $(SRCS)

clean: 
	del /Q $(OBJS) antlrd.lib *.idb *.pdb
